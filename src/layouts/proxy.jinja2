{# For posts that proxy to other posts via an iframe #}

{% extends "templates/base.jinja2" %}

{% block head %}
{% with item=item %}{% include 'includes/requires.jinja2' %}{% endwith %}
{% endblock %}

{% block content %}

<div class="--fullwidth">
  <div class="\proxy-window">
    <div class="\proxy-window\controls">
      <span class="\proxy-window\title">{$ item.title $}</span>
      <span><a href="{$ target $}">View as full page</a></span>
    </div>
    <iframe class="\proxy-window\iframe" src="{$ target $}"></iframe>
  </div>
</div>

<h2>{$ item.title $}</h2>
{$ item.payload $}

{% endblock %}
